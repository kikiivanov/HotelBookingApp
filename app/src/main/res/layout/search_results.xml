<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/app_logo"
        android:contentDescription="App Logo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-12dp"
        android:layout_marginTop="-12dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/textViewResultsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewLogo"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="16dp"
        android:text="Резултати от търсенето:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <ListView
        android:id="@+id/listViewHotels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewResultsTitle"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Връщане назад"
        android:layout_below="@id/listViewHotels"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
